@model IEnumerable<Make>

@{
    ViewData["Title"] = "Index";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Makes of Vehicle</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-motorcycle"></i> Add New Make</a>
    </div>
    <br />
    <div>
        <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m=>m.Name)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m=>item.Name)
                </td>
                <td>
                    <div class="text-end">
                        <div class="btn-group">
                            <a class="btn btn-primary" asp-controller="Make" asp-action="Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i> Edit</a> 
                            <form method="post" action="Delete">
                                <button
                                onclick="if (!confirm('¿Are you sure you want to delete this make?')){return false}"
                                type="submit" class="btn btn-danger" asp-controller="Make" asp-action="Delete" 
                                asp-route-id="@item.Id"><i class="far fa-trash-alt"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
        </table>
    </div>
</div>
