@model VehicleMarket.ViewModels.CreateModelViewModel;
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Add Model of Vehicle</h2>

<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-1">
            <label>Makes</label>
        </div>
        <div class="col-4">
            @Html.DropDownList("Datos", Model.MakesList(Model.Makes), "Selecciona una opcion", new { @class="form-control" })
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-1">
            <label asp-for="Model.Name" class="control-label">Name</label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
            <span asp-validation-for="Model.Name" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col-4 form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
