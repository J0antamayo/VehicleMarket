@model VehicleMarket.ViewModels.ModelViewModel;
@using VehicleMarket.Extensions;

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Edit Model</h3>
            </div>
            <form method="post" asp-action="Edit">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input hidden asp-for="Model.Id" />
                    <div class="form-group">
                        <label asp-for="Makes"></label>
                        <select asp-for="Model.MakeId" class="form-control" asp-items="Model.Makes.ToSelectListItem()"></select>
                        <span asp-validation-for="Model.MakeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model.Name" class="control-label"></label>
                        <input asp-for="Model.Name" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="Model.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-primary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
