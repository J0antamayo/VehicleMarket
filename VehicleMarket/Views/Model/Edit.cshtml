@model VehicleMarket.ViewModels.ModelViewModel;
@using VehicleMarket.Extensions;

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Model of Vehicle</h2>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="Model.Id" />
    <div class="form-group row">
        <div class="col-1">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.MakeId" class="form-control" asp-items="Model.Makes.ToSelectListItem()"></select>
            <span asp-validation-for="Model.MakeId" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-1">
            <label asp-for="Model.Name" class="control-label">Name</label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
            <span asp-validation-for="Model.Name" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col-4 form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>

</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
