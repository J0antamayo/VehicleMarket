@model IEnumerable<Model>

@{
    ViewData["Title"] = "Index";
}

<div class="row p-1">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title"><b>Models</b></h3>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <div class="row p-3">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success" asp-action="Create"><i class="fas fa-motorcycle"></i> Add New Model</a>
                    </div>
                </div>
                <table class="table table-bordered table-striped table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>
                                    @Html.DisplayNameFor(m=>m.Make)
                            </th>
                            <th>
                                @Html.DisplayNameFor(m=>m.Name)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m=>item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(m=>item.Make.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m=>item.Name)
                                </td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
