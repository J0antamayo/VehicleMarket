@using VehicleMarket.Helpers

@{
    string? pageName = ViewContext.RouteData.Values["controller"]?.ToString();
    string? actionName = ViewContext.RouteData.Values["action"]?.ToString();
}

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-controller="Bike" asp-action="Index" class="brand-link">
        <img src="~/adminlte/dist/img/AdminLTELogo.png" alt="Vehicle Market Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Vehicle Market App</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            
            <div class="image">
                <img src="~/adminlte/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Alexander Pierce</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <li class="@(pageName == "Bike" ? "nav-item menu-open" : "nav-item")">
                    <a class="@(pageName == "Bike" ? "nav-link active" : "nav-link")">
                        <i class="nav-icon fas fa-cart-plus"></i>
                        <p>
                            Market
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Bike" asp-action="Index" class="@(pageName == "Bike" ? "nav-link active" : "nav-link")">
                                <i class="far fa-circle nav-icon"></i>
                                <p>Bikes</p>
                            </a>
                        </li>
                    </ul>
                </li>
                @if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Executive))
                {
                    <li class="@(pageName == "Make" || pageName == "Model" || pageName == "Bike" ? "nav-item menu-open" : "nav-item")">
                        <a class="@(pageName == "Make" || pageName == "Model" || pageName == "Bike" ? "nav-link active" : "nav-link")">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Masters
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="Make" asp-action="Index" class="@(pageName == "Make" ? "nav-link active" : "nav-link")">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Makes</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Model" asp-action="Index" class="@(pageName == "Model" ? "nav-link active" : "nav-link")">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Models</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Bike" asp-action="Index" class="@(pageName == "Bike" ? "nav-link active" : "nav-link")">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Bikes</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>

        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>