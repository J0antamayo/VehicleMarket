@model int

<td>
    <div class="text-end">
        <div class="btn-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model"><i class="far fa-edit"></i> Edit</a>
            <form method="post" action="Delete">
                <button onclick="if (!confirm('¿Are you sure you want to delete this?')){return false}"
                        type="submit" class="btn btn-danger" asp-action="Delete"
                        asp-route-id="@Model">
                    <i class="far fa-trash-alt"></i> Delete
                </button>
            </form>
        </div>
    </div>
</td>